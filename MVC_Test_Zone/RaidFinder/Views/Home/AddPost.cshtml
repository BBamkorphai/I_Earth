@using RaidFinder.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject IHttpContextAccessor contxt;
@model RaidingPostModels
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RaidFinder</title>
    <link rel="stylesheet" href="~/lib/css/addpost.css">
</head>

<body>
    <header>
        <h1 id="title">Raid Finder</h1>
    </header>
    <div class="text">
        <h2 id="text">Add Post</h2>
    </div>


    <div class="box-container">
        <form id="form" method="post" asp-controller="home" asp-action="addpost">
            <label for="Name">Post Name</label> <br />
            <input type="text" asp-for="Name" name="Name" /><br />
            <label for="PowerLevel">Power Level</label><br />
            <input type="text" asp-for="PowerLevel" name="PowerLevel" /><br />
            <label for="MaxSize">Capacity</label><br />
            <input type="text" asp-for="MaxSize" name="MaxSize" /><br />
            <label for="Description">Description</label><br />
            <textarea id="Des" name="Description" rows="5" cols="20" asp-for="Description"></textarea><br />
            <label for="TimeOut">Timeout setting</label><br />
            <input type="time" asp-for="TimeOut" name="TimeOut" id="time" />
            <input id="ownerId" type="hidden" asp-for="OwnerId" value = "@contxt.HttpContext.Session.GetInt32("UserId")"/><br />
            <br />
            <input type="submit" value="Save" />
        </form>
    </div>        

    </script>
</body>

</html>
