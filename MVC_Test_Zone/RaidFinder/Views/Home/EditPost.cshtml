@using RaidFinder.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RaidingPostModels

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RaidFinder</title>
    <link rel="stylesheet" href="~/lib/css/addpost.css">
</head>

<body>
    <header>
        <h1 id="title">Raid Finder</h1>
    </header>
    <div class="text">
        <h2 id="text">Edit Post</h2>
    </div>


    <div class="box-container">
        <form id="form" method="post" asp-controller="home" asp-action="editpost">
            <label for="NamePost">Post Name</label> </br>
            <input type="text" asp-for="Name" name="Name" value="@Model.Name"/><br />
            <label for="PowerLevel">Power Level</label></br>
            <input type="text" asp-for="PowerLevel" name="PowerLevel" value="@Model.PowerLevel" /><br />
            <label for="MaxSize">Capacity</label></br>
            <input type="text" asp-for="MaxSize" name="MaxSize" value="@Model.MaxSize"/><br />
            <label for="Description">Description</label></br>
            <textarea id="Des" name="Description" rows="5" cols="20" asp-for="Description">"@Model.Description"
        </textarea></br>
            <label for="TimeOut setting">Timeout setting</label></br>
            <div class="Box">
                <input type="number" min="0" max="99" name="Hour" placeholder="Hour" />
                <input type="number" min="0" max="99" name="Minute"  placeholder="Min" />
            </div>
            <br />
            <input id="ownerId" type="hidden" asp-for="OwnerId" value="@Model.OwnerId" /><br />
            <input type="hidden" name="Users" value="@ViewBag.PartyList" />
            <input id="postId" type="hidden" asp-for="PostId" value="@Model.PostId"/><br />
            <input type="submit" value="Save" />
        </form>
    </div>

</body>

</html>