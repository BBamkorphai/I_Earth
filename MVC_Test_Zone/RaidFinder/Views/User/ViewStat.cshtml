@using RaidFinder.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<User>

<html>
<head>
    <title>PlayerStat</title>
</head>
<body>
    @if (Model != null && Model.Count() > 0)
    {
        @foreach (var User in Model)
        {
            <b>
                <span>ID : @User.UserId</span>
                <span>PLV : @User.Stat.PowerLevel</span>
                <span>Name : @User.Name</span>
                <span>Level : @User.Stat.Level</span>
                <a asp-controller="user" asp-action="editstat" asp-route-id ="@User.UserId">Edit</a>
                <a asp-controller="user" asp-action="deleteuser" asp-route-id="@User.UserId">Delete</a>
                <br />
            </b>
        }
    }
    <a asp-controller="user" asp-action="adduser">Add</a>
</body>
</html>
