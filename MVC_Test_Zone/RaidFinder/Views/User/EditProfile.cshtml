<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/lib/css/EditProfile.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anta&display=swap" rel="stylesheet">
</head>
<body>
    <div class="Container">
        <div class="MainBox">
            <div class="Image">
                <img class="UserProfile" src="~/image/jhin.jpg" alt="User Profile" />
                <img class="UserProfile" src="~/image/jhin.jpg" alt="User Profile" />
            </div>
            <div class="Form">
                <form method="post" asp-controller="user" asp-action="editstat" autocomplete="off">
                    <input type="hidden" asp-for="UserId" />
                    <div class="Form_group">
                        <input type="input" asp-for="Name" class="Form__field" placeholder="Name" id="name"/>
                        <label for="name" class="Form__label">Name</label>
                    </div>
                    <div class="Form_group">
                        
                        <input type="input" asp-for="Stat.Level" class="Form__field" placeholder="Level" id="level"/>
                        <label for="level" class="Form__label">Level</label>
                    </div>
                    <div class="Form_group">
                        
                        <input type="input" asp-for="Stat.PowerLevel" class="Form__field" placeholder="Power Level"id="powerLevel" />
                        <label for="powerLevel" class="Form__label">Power Level</label>
                    </div>
                    <div class="Form_group">
                        
                        <input type="input" asp-for="Stat.Class" class="Form__field" placeholder="Class"id="class" />
                        <label for="class" class="Form__label">Class</label>
                    </div>
                    <input type="submit" value="Save" />
                </form>
            </div>
        </div>
    </div>
</body>
</html>
